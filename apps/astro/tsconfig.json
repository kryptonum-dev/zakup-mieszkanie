{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@global/*": ["./src/global/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@schema/*": ["./src/schema/*"],
      "@assets/*": ["./src/assets/*"],
      "@public/*": ["./public/*"],
      "@layout/*": ["./src/layout/*"],
      "@api/*": ["./src/pages/api/*"]
    }
  }
}
